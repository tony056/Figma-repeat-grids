{
  "manifest_version": 2,
  "name": "Fig - Repeat Grids",
  "description": "A Figma plugin to create a table of duplicate layers",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["https://www.figma.com/file/*/*"],
      "js": ["/build/main.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "/build/plugin.js",
    "/js/api/Figma.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
